package mymain;

public class _01_논리형자료형 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
        //논리형자료형 : boolean
		//1.상수     : true  false
		//2.출력서식 : %b  %B
		
		//변수
		boolean bOk = 3 > 2;
				
		
		System.out.printf(" 3 > 2 : %b\n", bOk); // \n : new line(줄바꾸기)
		System.out.printf(" 3 > 2 : %B\n", bOk);
		
		bOk = "파리" == "새" ;
		System.out.printf(" 파리가 새냐? : %b\n", bOk);
		
		//화면출력방법
		//  print(숫자/문자/논리형)
		//1.print(값)           : 출력만
		//2.println(값)         : 출력 + 줄바꾸기
		//3.printf("서식",값)   : 서식대로 값을 넣어서 출력( JDK5.0 later )
		//4.write("값")         : 문자만 출력
		
		System.out.print("1.값만 출력\n");
		System.out.println("2.값출력 + 줄바꾸기");// line next
		System.out.printf("3.이름:%s 나이:%d 기혼:%b\n", "홍길동", 30 , false );
		
		//이런게 있다정도만..
		System.out.write(65);
		System.out.flush();
		
				
		
		
		
		
	}

}
