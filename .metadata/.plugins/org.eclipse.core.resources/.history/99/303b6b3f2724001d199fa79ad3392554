package mymain;

public class _02_정수형자료형 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
        //정수(소숫점이 없는수) : byte short int(기본형) long
		//상수 : 0 (int)    0L(long)
		//출력서식: 
		//          %d(decimal)  %o(octal)  %x(hexa)
		//  16진수 값의 표현 : 0 ~ 9  10 11 12 13 14 15
		//                             a  b  c  d  e  f
		//                     0x64 (Zero x붙인다)
		//  8진수 값의 표현 :  0144(앞에 0을 붙인다)
		
		int n = 100;
		System.out.printf("Dec:%d\n", n);
		System.out.printf("Oct:0%o\n", n); //영문자 o
		System.out.printf("Hex:0x%x\n", n);
		
		System.out.printf("0144->%d\n", 0144);
		
		System.out.printf("0x64->%d\n", 0x64);
		
		//2진수 출력
		n=1990;
		System.out.println(  Integer.toBinaryString(n)  );
		
		//자릿수지정해서 출력
		// %nd : n 전체자릿수( + : Right  - : Left)
		System.out.printf("[%10d]\n", 12345);
		System.out.printf("[%-10d]\n", 12345);
		// %0nd : 앞쪽의 빈공간 0으로 채워라
		System.out.printf("[%010d]\n", 12345);
		//System.out.printf("[%-010d]\n", 12345); (X)
		//출력자릿수가 크면 전체자릿수는 무시된다
		System.out.printf("[%3d]\n", 12345);
		
		System.out.println("---[자료형의 범위]---");
		
		System.out.printf("byte : %d ~ %d\n", Byte.MIN_VALUE, Byte.MAX_VALUE);
		System.out.printf("short: %d ~ %d\n", Short.MIN_VALUE,Short.MAX_VALUE);
		System.out.printf("int  : %d ~ %d\n", Integer.MIN_VALUE,Integer.MAX_VALUE);
		System.out.printf("long : %d ~ %d\n", Long.MIN_VALUE,Long.MAX_VALUE);
		
		
		
		
		
		
	}

}
